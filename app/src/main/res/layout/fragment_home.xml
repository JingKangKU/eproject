<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".fragment.HomeFragment">
    <com.ums.eproject.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ums.eproject.view.ResizableImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_wheel_1" />

                <TextView
                    android:id="@+id/home_wheel_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="邀您开启财富旅程"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />
                <TextView
                    android:id="@+id/home_wheel_desc"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/home_wheel_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXXXXXXXXXXXX"
                    android:textColor="#ffffffff"
                    android:textSize="9sp"/>
                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/home_wheel_desc"
                    android:background="@drawable/yellow_round_shape_10"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击进入"
                        android:textColor="#ff2c74d6"
                        android:textSize="11sp"/>
                </LinearLayout>
            </RelativeLayout>
            <com.stx.xhb.androidx.XBanner
                android:id="@+id/home_top_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:AutoPlayTime="4000"
                app:pointsPosition="RIGHT"
                app:isShowNumberIndicator="true"
                app:isShowIndicatorOnlyOne="true"
                app:pageChangeDuration="4000"
                app:pointNormal="@mipmap/ic_page_indicator_focused"
                app:pointSelect="@mipmap/ic_page_indicator"
                app:tipTextSize="16sp" >
            </com.stx.xhb.androidx.XBanner>

            <LinearLayout
                android:gravity="center"
                android:paddingTop="4dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/white_round_shape_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="12dp"
                    android:id="@+id/home_recycler_ability_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="12dp"
                android:id="@+id/home_recycler_func_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="13dp"/>
        </LinearLayout>
    </com.ums.eproject.view.OverScrollView>
</FrameLayout>