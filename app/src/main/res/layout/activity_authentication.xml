<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical"
    tools:context=".activity.AuthenticationActivity">

    <include layout="@layout/layout_title" />

    <com.ums.eproject.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_authentication_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名认证："
                android:textColor="#1d1d1d"
                android:textSize="17sp" />

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/white_round_shape_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="姓名"
                    android:textColor="#1d1d1d"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/authentication_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint=""
                    android:textColor="#272727"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/white_round_shape_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="身份证号"
                    android:textColor="#1d1d1d"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/authentication_id"
                    android:digits="0123456789xX"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint=""
                    android:textColor="#272727"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_auth_yj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/white_round_shape_5"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传证件"
                    android:textColor="#1d1d1d"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="上传现役军官证、士官证、士兵证、转业证、退役证等证明，拍照上传"
                    android:textColor="#1d1d1d"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/grey_round_shape_5"
                    android:orientation="vertical"
                    android:paddingLeft="28dp"
                    android:paddingTop="28dp"
                    android:paddingRight="28dp"
                    android:paddingBottom="17dp">

                    <RelativeLayout
                        android:layout_width="90.5dp"
                        android:layout_height="68dp"
                        android:background="@mipmap/audit_box">

                        <RelativeLayout
                            android:layout_width="64.5dp"
                            android:layout_height="35.5dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/audit_cart">

                            <ImageView
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/audit_camera" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="21dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传 "
                            android:textColor="#1d1d1d"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="证件"
                            android:textColor="#0869B6"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_auth_xs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/white_round_shape_5"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传证件"
                    android:textColor="#1d1d1d"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="上传学生证等证明，拍照上传"
                    android:textColor="#1d1d1d"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/grey_round_shape_5"
                        android:orientation="vertical"
                        android:paddingLeft="28dp"
                        android:paddingTop="28dp"
                        android:paddingRight="28dp"
                        android:paddingBottom="17dp">

                        <RelativeLayout
                            android:layout_width="90.5dp"
                            android:layout_height="68dp"
                            android:background="@mipmap/audit_box">

                            <RelativeLayout
                                android:layout_width="64.5dp"
                                android:layout_height="35.5dp"
                                android:layout_centerInParent="true"
                                android:background="@mipmap/audit_cart">

                                <ImageView
                                    android:layout_width="29dp"
                                    android:layout_height="29dp"
                                    android:layout_centerInParent="true"
                                    android:src="@mipmap/audit_camera" />

                            </RelativeLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="21dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点击上传 "
                                android:textColor="#1d1d1d"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="正面"
                                android:textColor="#0869B6"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_round_shape_5"
                        android:orientation="vertical"
                        android:paddingLeft="28dp"
                        android:paddingTop="28dp"
                        android:paddingRight="28dp"
                        android:paddingBottom="17dp">

                        <RelativeLayout
                            android:layout_width="90.5dp"
                            android:layout_height="68dp"
                            android:background="@mipmap/audit_box">

                            <RelativeLayout
                                android:layout_width="64.5dp"
                                android:layout_height="35.5dp"
                                android:layout_centerInParent="true"
                                android:background="@mipmap/audit_cart">

                                <ImageView
                                    android:layout_width="29dp"
                                    android:layout_height="29dp"
                                    android:layout_centerInParent="true"
                                    android:src="@mipmap/audit_camera" />

                            </RelativeLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="21dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点击上传 "
                                android:textColor="#1d1d1d"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="反面"
                                android:textColor="#0869B6"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/authentication_submit"
                android:background="@drawable/bull_round_shape_22"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="提交认证"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:id="@+id/authentication_skip"
                android:background="@drawable/grey_round_shape_22"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="直接跳过"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </com.ums.eproject.view.OverScrollView>
</LinearLayout>