<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2288D9"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <com.ums.eproject.view.OverScrollView
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:background="@mipmap/rectangle"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="107dp"
                android:layout_centerInParent="true"
                android:paddingBottom="19dp"
                android:src="@mipmap/logo" />
        </RelativeLayout>
        <LinearLayout

            android:layout_marginTop="-40dp"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:background="@drawable/login_edit_shape"
            android:orientation="vertical"
            android:padding="28dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/login_account"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/login_account_text"
                        android:paddingBottom="15dp"
                        android:gravity="center"
                        android:text="登录账号"
                        android:textColor="#ff828282"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/login_account_text_line"
                        android:background="#828282"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/login_register"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/login_register_text"
                        android:paddingBottom="15dp"
                        android:gravity="center"
                        android:text="注册账号"
                        android:textColor="#ff828282"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/login_register_text_line"
                        android:background="#0869B6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:background="@drawable/login_input_shape"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/phone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <EditText
                    android:id="@+id/login_phone"
                    android:layout_gravity="center"
                    android:inputType="phone|number"
                    android:layout_marginLeft="10dp"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textColorHint="#ffbebdbd"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:height="40dp"
                    android:hint="请输入手机号"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_login_verification"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/login_input_shape"
                    android:paddingBottom="10dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/safety"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <EditText
                        android:id="@+id/login_verification"
                        android:layout_gravity="center"
                        android:inputType="phone|number"
                        android:layout_marginLeft="10dp"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:textColorHint="#ffbebdbd"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:height="40dp"
                        android:hint="请输入短信验证码"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/login_send_msg_code"
                    android:gravity="center"
                    android:background="@drawable/login_btn_shape"
                    android:text="获取验证码"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    android:layout_width="77dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/login_send_register_msg_code"
                    android:gravity="center"
                    android:background="@drawable/login_btn_shape"
                    android:text="获取验证码"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    android:layout_width="77dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_login_px"
                android:background="@drawable/login_input_shape"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/unlock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <EditText
                    android:id="@+id/login_pw"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textColorHint="#ffbebdbd"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:height="40dp"
                    android:hint="请输入登录密码"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <ImageView
                    android:id="@+id/tv_login_pw_eyes"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/eyes"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_login_confirm_pw"
                android:background="@drawable/login_input_shape"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/unlock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <EditText
                    android:id="@+id/login_confirm_pw"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textColorHint="#ffbebdbd"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:height="40dp"
                    android:hint="请确认登录密码"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <ImageView
                    android:id="@+id/tv_login_register_eyes"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/eyes"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/login_submit"
            android:background="@drawable/login_submit_shape"
            android:layout_marginTop="24dp"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <LinearLayout
            android:id="@+id/linear_login_sub_bottom"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_login_yzm"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="验证码登录    |"
                android:textColor="#ff787878"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_login_pw"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:text="    密码登录"
                android:textColor="#ff787878"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_login_bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingTop="3dp"
                android:src="@mipmap/choose"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <TextView
                android:gravity="top"
                android:layout_gravity="top"
                android:id="@+id/login_desc"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:text="V 1.0.3"
                    android:textColor="#ff787878"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

    </LinearLayout>
    </com.ums.eproject.view.OverScrollView>


</LinearLayout>