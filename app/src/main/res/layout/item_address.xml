<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:background="@drawable/login_edit_shape"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="21dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="徐先生"
            android:textColor="@color/black"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18112997333"
            android:layout_marginLeft="8dp"
            android:textColor="#ffbebdbd"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="默认"
            android:textColor="#ff0869b6"
            android:layout_marginLeft="8dp"
            android:textSize="10sp"
            />
        <ImageButton
            android:id="@+id/ib_edit"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/edit"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="21dp"
        android:text="江苏省 南京市 浦口区 威尼斯十一街区"
        android:textColor="#ff1d1d1d"
        android:textSize="15sp"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="86dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#D2D2D2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="98dp">

        <ImageView
            android:id="@+id/iv_deault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/select" />

        <TextView
            android:id="@+id/tv_default_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_deault"
            android:text="默认地址"
            android:textColor="#bebdbd"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#bebdbd"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>