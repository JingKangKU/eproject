<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_title"
    android:background="@drawable/title_bg_shape"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/main_title_back"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/main_title_text"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/user_head"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/user_info_mobile"
                android:text=""
                android:textColor="#fffefefe"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/linear_user_audit_state_succ"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/integral_bg_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/user_smrz"
                    android:layout_width="11dp"
                    android:layout_height="11dp"/>
                <TextView
                    android:text="已认证"
                    android:textColor="#ff0869b6"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_user_audit_state_none"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/integral_bg_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/user_audit_none"
                    android:layout_width="11dp"
                    android:layout_height="11dp"/>
                <TextView
                    android:text="未认证"
                    android:textColor="#ff0869b6"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_user_audit"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/user_info_card_type"
                android:text=""
                android:textColor="#ffdcf0ff"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="4dp"
                android:src="@mipmap/user_right"
                android:layout_width="11dp"
                android:layout_height="11dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
