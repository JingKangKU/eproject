<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.ums.eproject.view.ResizableImageView
                android:id="@+id/func_1_left_image"
                android:src="@mipmap/home_img_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/func_1_left_chn_txt"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="12dp"
                android:text="KFC"
                android:textColor="#ff2f3133"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/func_1_left_eng_tet"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="12dp"
                android:text=""
                android:textColor="#ff2f3133"
                android:textSize="6sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.ums.eproject.view.ResizableImageView
                android:id="@+id/func_1_right_image"
                android:src="@mipmap/home_img_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/func_1_right_chn_txt"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="12dp"
                android:text="海底捞"
                android:textColor="#ff2f3133"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/func_1_right_eng_txt"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="12dp"
                android:text="HAI DI LAO"
                android:textColor="#ff2f3133"
                android:textSize="6sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

</LinearLayout>