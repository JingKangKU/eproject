<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/home_func_item_1"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.ums.eproject.view.ResizableImageView
                android:id="@+id/func_1_left_image"
                android:src="@mipmap/home_img_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/func_1_left_chn_txt"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="12dp"
                android:textColor="#ff2f3133"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/func_1_left_eng_tet"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="12dp"
                android:textColor="#ff2f3133"
                android:textSize="6sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.ums.eproject.view.ResizableImageView
                android:id="@+id/func_1_right_image"
                android:src="@mipmap/home_img_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/func_1_right_chn_txt"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="12dp"
                android:textColor="#ff2f3133"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/func_1_right_eng_txt"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="12dp"
                android:textColor="#ff2f3133"
                android:textSize="6sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_func_item_2"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.ums.eproject.view.ResizableImageView
                android:id="@+id/func_2_left_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_img_1" />
            <TextView
                android:id="@+id/func_2_left_chn_txt"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="12dp"
                android:textColor="#2f3133"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/func_2_left_eng_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="29dp"
                android:textColor="#ff2f3133"
                android:textSize="6sp" />
        </RelativeLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.ums.eproject.view.ResizableImageView
                    android:id="@+id/func_2_right_1_image"
                    android:src="@mipmap/home_img_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/func_2_right_1_chn_txt"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff2f3133"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/func_2_right_1_eng_txt"
                    android:layout_marginTop="29dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff2f3133"
                    android:textSize="6sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.ums.eproject.view.ResizableImageView
                    android:id="@+id/func_2_right_2_image"
                    android:src="@mipmap/home_img_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/func_2_right_2_chn_txt"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff2f3133"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/func_2_right_2_eng_txt"
                    android:layout_marginTop="29dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff2f3133"
                    android:textSize="6sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_func_item_3"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.ums.eproject.view.ResizableImageView
                    android:id="@+id/func_3_left_1_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_img_2" />

                <TextView
                    android:id="@+id/func_3_left_1_chn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="11dp"
                    android:textColor="#ff2f3133"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/func_3_left_1_eng_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="29dp"
                    android:textColor="#ff2f3133"
                    android:textSize="6sp" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.ums.eproject.view.ResizableImageView
                    android:id="@+id/func_3_left_2_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_img_3" />

                <TextView
                    android:id="@+id/func_3_left_2_chn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="11dp"
                    android:textColor="#ff2f3133"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/func_3_left_2_eng_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="29dp"
                    android:textColor="#ff2f3133"
                    android:textSize="6sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.ums.eproject.view.ResizableImageView
                android:id="@+id/func_3_right_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_img_1" />

            <TextView
                android:id="@+id/func_3_right_chn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="11dp"
                android:textColor="#2f3133"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/func_3_right_eng_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="29dp"
                android:textColor="#ff2f3133"
                android:textSize="6sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>