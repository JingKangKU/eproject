<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical"
    tools:context=".activity.AddressActivity">

    <include
        android:id="@+id/title_ll"
        layout="@layout/layout_title" />

    <com.ums.eproject.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_ll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner_detail_marketing"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:pageChangeDuration="1500"
                app:pointNormal="@mipmap/ic_page_indicator_focused"
                app:pointSelect="@mipmap/ic_page_indicator"
                app:tipTextSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner_detail_marketing"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/login_edit_shape"
                android:orientation="vertical"
                android:paddingVertical="20dp">

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="绿化工程"
                    android:textColor="#ff111111"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_unitName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    android:text="鑫通绿化"
                    android:textColor="#ff9c9c9c"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/ll_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/blue_round_shape"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/mobile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="7dp"
                        android:layout_marginLeft="6dp"
                        android:text="联系方式"
                        android:textColor="#ffffffff"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iV_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_middle"
                android:layout_marginTop="26dp"
                android:src="@mipmap/description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/iV_description"
                android:layout_marginTop="12dp">

                <WebView
                    android:id="@+id/wb_desc_marketing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </com.ums.eproject.view.OverScrollView>
</RelativeLayout>